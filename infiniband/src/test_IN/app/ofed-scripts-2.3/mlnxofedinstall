    $network_dir = "/etc/sysconfig/network";
}
else {
    $network_dir = "/etc/sysconfig/network-scripts";
}

# don't install 32bit libs on sles11sp1x86_64 if libnl.i586 is missing
if ($arch =~ m/x86_64/ and $rpm_distro eq "sles11sp1" and not is_installed("libnl.i586")) {
    $install32 = 0;
}

if ($update and $install32) {
    print RED "Update is not supported for 32-bit libraries.", RESET "\n";
    exit $ENOSPC if (not $force);
    print YELLOW ON_BLUE "Disabling update. The previous version will be removed...", RESET "\n";
    $update = 0;
}

$uninstall = 0 if ($update);
$rpminstall_parameter = "-U" if ($update);

if ("$MLNX_OFED_DISTRO" eq "skip-distro-check") {
    $skip_distro_check = 1;
}
if (not $skip_distro_check and not $is_ux) {
    if ($MLNX_OFED_DISTRO =~ /rhel/ and $DISTRO =~ /OEL/) {
        # enable using RHEL pacakge on OEL distros
        $DISTRO =~ s/OEL/RHEL/g;
        $rpm_distro =~ s/oel/rhel/g;
    }
    if ($MLNX_OFED_DISTRO ne lc($DISTRO) and $MLNX_OFED_DISTRO ne $rpm_distro) {
        print RED "Error: The current MLNX_OFED_LINUX is intended for $MLNX_OFED_DISTRO" , RESET "\n";
        exit $PREREQUISIT;
    }
}

if ($add_kernel_support) {
    uninstall();
    my $new_package = "$PACKAGE-$MLNX_OFED_LINUX_VERSION-" . lc($DISTRO) . "-ext";
    my $flags = "";
    if ($force) {
        $flags = " --force";
    }
    for my $key ( keys %disabled_packages ) {
        $flags .= " --without-$key";
    }
    system("TMP=$TMPDIR/$PACKAGE-$MLNX_OFED_LINUX_VERSION-$kernel $CWD/mlnx_add_kernel_support.sh -m $CWD -k $kernel --make-tgz --name $new_package --yes $flags --distro $DISTRO");
    my $res = $? >> 8;
    my $sig = $? & 127;
    if ($sig or $res) {
        print RED "Failed to build $PACKAGE for $kernel", RESET "\n";
        exit $ERROR;
    }

    if (-f "$TMPDIR/$PACKAGE-$MLNX_OFED_LINUX_VERSION-$kernel/$new_package.tgz") {
        print GREEN "Installing $TMPDIR/$PACKAGE-$MLNX_OFED_LINUX_VERSION-$kernel/$new_package", RESET "\n";
        system("cd $TMPDIR/$PACKAGE-$MLNX_OFED_LINUX_VERSION-$kernel; tar xzf $new_package.tgz");
        print BLUE "$TMPDIR/$PACKAGE-$MLNX_OFED_LINUX_VERSION-$kernel/$new_package/mlnxofedinstall --force @saved_ARGV", RESET "\n";
        system("$TMPDIR/$PACKAGE-$MLNX_OFED_LINUX_VERSION-$kernel/$new_package/mlnxofedinstall --force @saved_ARGV");
        my $res = $? >> 8;
        my $sig = $? & 127;
        if ($sig or $res) {
            print RED "Failed to install $new_package for $kernel", RESET "\n";
            exit $ERROR;
        }
    }
    exit $SUCCESS;
}

if ($config_given and $install_option) {
    $install_option = '';
}

if ($config_given and not -e $config) {
    print RED "$config does not exist", RESET "\n";
    exit $ERROR;
}

if (not $config_given and -e $config) {
    move($config, "$config.save");
}

if ($quiet) {
    $verbose = 0;
    $verbose2 = 0;
    $verbose3 = 0;
}

my %ifcfg = ();
if ($config_net_given and not -e $config_net) {
    print RED "$config_net does not exist", RESET "\n";
    exit $ERROR;
}

my $eth_dev;
if ($config_net_given) {
    open(NET, "$config_net") or die "Can't open $config_net: $!";
    while (<NET>) {
        my ($param, $value) = split('=');
        chomp $param;
        chomp $value;
        my $dev = $param;
        $dev =~ s/(.*)_(ib[0-9]+)/$2/;
        chomp $dev;

        if ($param =~ m/IPADDR/) {
            $ifcfg{$dev}{'IPADDR'} = $value;
        }
        elsif ($param =~ m/NETMASK/) {
            $ifcfg{$dev}{'NETMASK'} = $value;
        }
        elsif ($param =~ m/NETWORK/) {
            $ifcfg{$dev}{'NETWORK'} = $value;
        }
        elsif ($param =~ m/BROADCAST/) {
            $ifcfg{$dev}{'BROADCAST'} = $value;
        }
        elsif ($param =~ m/ONBOOT/) {
            $ifcfg{$dev}{'ONBOOT'} = $value;
        }
        elsif ($param =~ m/LAN_INTERFACE/) {
            $ifcfg{$dev}{'LAN_INTERFACE'} = $value;
        }
        else {
            print RED "Unsupported parameter '$param' in $config_net", RESET "\n" if ($verbose2);
        }
    }
    close(NET);
}

my $kernel_rel = $kernel;
$kernel_rel =~ s/-/_/g;

if ($DISTRO =~ m/DEBIAN/) {
    $check_linux_deps = 0;
    $rpminstall_flags .= ' --nodeps';
}

if (-f "$added_kernels" and not $force_kmp) {
    open(AK, "$added_kernels") or die "Can't open $added_kernels: $!";
    my $match = 0;
    while (<AK>) {
        chomp $_;
        if ($_ eq $kernel) {
            $match = 1;
            last;
        }
    }
    close(AK);
    $kmp = 0 if ($match);
}

if ($kmp and ($DISTRO =~ m/XenServer|RHEL5.2|OEL|FC|SLES10/ or $kernel =~ /xs|fbk|fc|debug|uek/)) {
    $kmp = 0;
}

# Disable KMP for kernels incompatible with the original Distro's kernel
if ($kmp) {
    # RHEL
    if (($DISTRO eq "RHEL7.0" and $kernel !~ /3.10.0-123.*el7\.$arch/) or
        ($DISTRO eq "RHEL6.6" and $kernel !~ /2.6.32-4[0-9][0-9].*el6\.$arch/) or
        ($DISTRO eq "RHEL6.5" and $kernel !~ /2.6.32-4[0-9][0-9].*el6\.$arch/) or
        ($DISTRO eq "RHEL6.4" and $kernel !~ /2.6.32-358.*el6\.$arch/) or
        ($DISTRO eq "RHEL6.3" and $kernel !~ /2.6.32-279.*el6\.$arch/) or
        ($DISTRO eq "RHEL6.2" and $kernel !~ /2.6.32-220.*el6\.$arch/) or
        ($DISTRO eq "RHEL6.1" and $kernel !~ /2.6.32-131.*el6\.$arch/)) {
        $kmp = 0;
    }
    # SLES
    if (($rpm_distro eq "sles12sp0" and $kernel !~ /3.12.[1-9][2-9]-[0-9].*/) or
        ($rpm_distro eq "sles11sp3" and $kernel !~ /3.0.7[6-9]-[0-9].[0-9]*|3.0.[8-9][0-9]-[0-9].[0-9]*|3.0.[1-9][0-9][0-9]-[0-9].[0-9]/) or
        ($rpm_distro eq "sles11sp2" and $kernel !~ /3\.0\.(1[3-9]|[2-8][0-9])-0\.([0-9]|27)/) or #3.0.[13-80]-0.[0-9].[1-9]
        ($rpm_distro eq "sles11sp1" and $kernel !~ /2\.6\.32\.(1[2-9]|[2-5][0-9])-0\.[0-9]/) ) { #2.6.32.[12-54]-0.[0-9].[1-2]
        $kmp = 0;
    }
    # OpenSUSE
    if ($DISTRO eq "openSUSE12.1" and ($kernel !~ /3\.1\.[0-9]/) ) {
        $kmp = 0;
    }
}

